{
    "compilerOptions": {
        "sourceMap": true,
        "module": "es2015",
        "target": "es2017",
        "moduleResolution": "node",
        "outDir": "./types",
        "jsx": "react",
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "noEmit": false,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2019"
        ],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    }
}